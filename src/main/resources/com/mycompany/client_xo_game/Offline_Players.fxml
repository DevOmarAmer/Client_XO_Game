<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           prefWidth="800" prefHeight="600"
           stylesheets="@/styles/offline_players.css"
           styleClass="offline-root"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.Offline_PlayersController">

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="35"
          maxWidth="Infinity"
          fillWidth="true">

        <!-- TITLE -->
        <Label fx:id="titleLabel"
               text="OFFLINE PLAYERS"
               styleClass="offline-title"
               wrapText="false"
               ellipsisString=""
               maxWidth="Infinity"
               alignment="CENTER"/>

        <!-- INPUTS -->
        <VBox fx:id="inputContainer" spacing="20" fillWidth="true">

            <TextField fx:id="player_one_id"
                       promptText="Enter Player One Name"
                       styleClass="neon-input"/>

            <TextField fx:id="Player_two_id"
                       promptText="Enter Player Two Name"
                       styleClass="neon-input"/>

        </VBox>

        <!-- ACTION BUTTONS -->
        <HBox spacing="25" alignment="CENTER">

            <Button fx:id="back_id"
                    text="â† BACK"
                    onAction="#goBack"
                    styleClass="back-btn"/>

            <Button fx:id="play_id"
                    text="PLAY"
                    onAction="#playGame"
                    styleClass="play-btn"/>

        </HBox>

    </VBox>
</StackPane>
