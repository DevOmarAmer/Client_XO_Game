<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane"
           prefWidth="900" prefHeight="700"
           stylesheets="@/styles/offline_players.css"
           styleClass="offline-root"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.mycompany.client_xo_game.Offline_PlayersController">

    <Label text="X" styleClass="bg-symbol-x" StackPane.alignment="TOP_RIGHT" translateX="-50" translateY="50"/>
    <Label text="O" styleClass="bg-symbol-o" StackPane.alignment="BOTTOM_LEFT" translateX="50" translateY="-50"/>

    <Button fx:id="back_id"
            text="â† BACK"
            onAction="#goBack"
            styleClass="xo-back-btn"
            StackPane.alignment="TOP_LEFT"
            translateX="25"
            translateY="25"/>

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="45"
          maxWidth="450"
          maxHeight="550"
          styleClass="xo-glass-panel">

        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="15">
                <Text text="X" styleClass="logo-x"/>
                <Text text="O" styleClass="logo-o"/>
            </HBox>
            <Label fx:id="titleLabel" text="OFFLINE BATTLE" styleClass="offline-title"/>
            <Line endX="180" stroke="#00fff0" strokeWidth="2.0" opacity="0.6"/>
        </VBox>

        <VBox fx:id="inputContainer" spacing="25" fillWidth="true">
            <TextField fx:id="player_one_id"
                       promptText="Player One Name"
                       styleClass="xo-input"/>

            <TextField fx:id="player_two_id"
                       promptText="Player Two Name"
                       styleClass="xo-input"/>
        </VBox>

        <CheckBox fx:id="record_game_chk"
                  text="Record Game"
                  styleClass="xo-checkbox"/>

        <Button fx:id="play_id"
                text="START MATCH"
                onAction="#playGame"
                maxWidth="Infinity"
                styleClass="xo-btn cyan-glow"/>
                
    </VBox>
</StackPane>