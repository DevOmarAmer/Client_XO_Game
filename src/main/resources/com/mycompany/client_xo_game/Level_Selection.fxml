<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane"
           prefWidth="900" prefHeight="700"
           stylesheets="@/styles/level_selection.css"
           styleClass="level-root"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.Level_SelectionController">

    <Label text="X" styleClass="bg-symbol-x" StackPane.alignment="TOP_RIGHT" translateX="-50" translateY="50"/>
    <Label text="O" styleClass="bg-symbol-o" StackPane.alignment="BOTTOM_LEFT" translateX="50" translateY="-50"/>

    <Button fx:id="btnBack"
            text="â† BACK"
            onAction="#goBack"
            styleClass="xo-back-btn"
            StackPane.alignment="TOP_LEFT"
            translateX="30"
            translateY="30"/>

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="40"
          maxWidth="500"
          maxHeight="550"
          styleClass="xo-glass-panel">

        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="15">
                <Text text="X" styleClass="logo-x"/>
                <Text text="O" styleClass="logo-o"/>
            </HBox>
            <Label fx:id="titleLabel" text="ARENA DIFFICULTY" styleClass="level-title"/>
            <Line endX="180" stroke="#00fff0" strokeWidth="2.0" opacity="0.6"/>
        </VBox>

        <VBox fx:id="buttonContainer"
              alignment="CENTER"
              spacing="22"
              fillWidth="true">

            <Button fx:id="btnEasy"
                    text="EASY MODE"
                    onAction="#easy"
                    maxWidth="Infinity"
                    styleClass="xo-btn green-glow"/>

            <Button fx:id="btnMedium"
                    text="MEDIUM MODE"
                    onAction="#medium"
                    maxWidth="Infinity"
                    styleClass="xo-btn yellow-glow"/>

            <Button fx:id="btnHard"
                    text="IMPOSSIBLE"
                    onAction="#hard"
                    maxWidth="Infinity"
                    styleClass="xo-btn red-glow"/>
        </VBox>
    </VBox>
</StackPane>