<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/11"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.SnakeController"
           styleClass="main-root"
           stylesheets="@/styles/snake.css">

    <Canvas fx:id="canvas"/>

    <AnchorPane pickOnBounds="false">
        <Button text="â† EXIT" 
                onAction="#goToMenu" 
                styleClass="hud-btn" 
                AnchorPane.topAnchor="20.0" 
                AnchorPane.leftAnchor="20.0"/>

        <Label fx:id="lblLiveScore" 
               text="SCORE: 0" 
               styleClass="hud-score" 
               AnchorPane.topAnchor="20.0" 
               AnchorPane.rightAnchor="30.0"/>
        <Label fx:id="lblLevel" 
               text="LEVEL: 1" 
               styleClass="hud-score" 
               AnchorPane.topAnchor="100.0" 
               AnchorPane.rightAnchor="30.0"/>
    </AnchorPane>

    <VBox fx:id="gameOverPane"
          alignment="CENTER"
          spacing="20"
          visible="false"
          styleClass="game-over-panel">

        <Label text="SYSTEM FAILURE" styleClass="game-over-title"/>
        
        <Line endX="200" styleClass="separator-line"/>
        
        <Label fx:id="scoreLabel" text="FINAL SCORE: 0" styleClass="final-score"/>

        <VBox spacing="10" alignment="CENTER">
            <Button text="REBOOT SYSTEM (PLAY AGAIN)"
                    onAction="#playAgain"
                    styleClass="action-btn, cyan-btn"/>
            
            <Button text="ABORT (MAIN MENU)"
                    onAction="#goToMenu"
                    styleClass="action-btn, pink-btn"/>
        </VBox>
    </VBox>

</StackPane>