<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane"
           prefWidth="900" prefHeight="700"
           stylesheets="@/styles/online_players.css"
           styleClass="main-root"
           xmlns="http://javafx.com/javafx/13"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.OnlinePlayersController">

    <Label text="X" styleClass="bg-symbol-x" StackPane.alignment="TOP_RIGHT" translateX="-30" translateY="80"/>
    <Label text="O" styleClass="bg-symbol-o" StackPane.alignment="BOTTOM_LEFT" translateX="30" translateY="-50"/>

    <Button text="â† BACK"
            onAction="#goBack"
            styleClass="xo-back-btn"
            StackPane.alignment="TOP_LEFT"
            translateX="30"
            translateY="30"/>

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="20"
          maxWidth="600"
          maxHeight="600"
          styleClass="xo-glass-panel">

        <VBox alignment="CENTER" spacing="5">
            <HBox alignment="CENTER" spacing="10">
                <Text text="ONLINE" styleClass="title-neon-blue"/>
                <Text text="PLAYERS" styleClass="title-neon-pink"/>
            </HBox>
            <Line endX="200" stroke="#00fff0" strokeWidth="2.0" opacity="0.6"/>
        </VBox>

        <ListView fx:id="playersList" VBox.vgrow="ALWAYS" styleClass="neon-list-view"/>

        <HBox alignment="CENTER" spacing="30" styleClass="nav-bar">
            <Button text="ðŸ“º Game Replays" onAction="#goToReplays" styleClass="nav-btn"/>
            <Line startY="0" endY="20" stroke="white" opacity="0.3"/>
            <Button text="ðŸ† Leaderboard" onAction="#goToLeaderboard" styleClass="nav-btn"/>
        </HBox>

    </VBox>
</StackPane>