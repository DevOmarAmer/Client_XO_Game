<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane fx:id="rootPane"
           prefWidth="900" prefHeight="700"
           stylesheets="@/styles/mode_selection.css"
           styleClass="mode-root"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.Mode_SelectionController">

    <Circle radius="150" fill="#00d2ff22" StackPane.alignment="TOP_RIGHT" translateX="50" translateY="-50" />
    <Circle radius="100" fill="#ff007f11" StackPane.alignment="BOTTOM_LEFT" translateX="-30" translateY="30" />

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="50"
          maxWidth="550"
          maxHeight="600"
          styleClass="glass-panel">

        <VBox alignment="CENTER" spacing="5">
            <Label fx:id="titleLabel"
                   text="SELECT MODE"
                   styleClass="mode-title"/>
            <Rectangle width="120" height="3" fill="#00fff0" arcWidth="5" arcHeight="5"/>
        </VBox>

        <VBox fx:id="buttonContainer"
              alignment="CENTER"
              spacing="20"
              fillWidth="true">

            <Button fx:id="btnComputer"
                    text="VS COMPUTER"
                    onAction="#goToLevelSelection"
                    maxWidth="Infinity"
                    styleClass="cyber-btn blue-neon"/>

            <Button fx:id="btnOffline"
                    text="LOCAL MULTIPLAYER"
                    onAction="#goToOfflinePlayers"
                    maxWidth="Infinity"
                    styleClass="cyber-btn cyan-neon"/>

            <Button fx:id="btnOnline"
                    text="GLOBAL BATTLE"
                    onAction="#goToLogin"
                    maxWidth="Infinity"
                    styleClass="cyber-btn pink-neon"/>
        </VBox>
        
        <Label text="v1.0.2 Cyber Edition" style="-fx-text-fill: rgba(255,255,255,0.3); -fx-font-size: 10px;"/>
    </VBox>
</StackPane>