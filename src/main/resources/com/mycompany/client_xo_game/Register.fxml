<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<StackPane fx:id="rootPane"
           prefWidth="900" prefHeight="700"
           stylesheets="@/styles/register.css"
           styleClass="register-root"
           xmlns="http://javafx.com/javafx/13"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.RegisterController">

    <Label text="X" styleClass="bg-symbol-x" StackPane.alignment="TOP_RIGHT" translateX="-50" translateY="50"/>
    <Label text="O" styleClass="bg-symbol-o" StackPane.alignment="BOTTOM_LEFT" translateX="50" translateY="-50"/>

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="35"
          maxWidth="500"
          styleClass="xo-glass-panel">

        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="15">
                <Text text="X" styleClass="logo-x"/>
                <Text text="O" styleClass="logo-o"/>
            </HBox>
            <Label fx:id="titleLabel" text="CREATE ACCOUNT" styleClass="register-title"/>
            <Line endX="150" stroke="#00fff0" strokeWidth="2.0" opacity="0.6"/>
        </VBox>

        <GridPane fx:id="inputGrid" hgap="30" vgap="25" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="45"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="45"/>
            </columnConstraints>

            <TextField fx:id="usernameField" promptText="Username" styleClass="neon-input" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="emailField" promptText="Email Address" styleClass="neon-input" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="neon-input" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="neon-input" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>

        <VBox spacing="15" alignment="CENTER" fillWidth="true">
            <Button fx:id="registerBtn" text="SIGN UP" onAction="#handleRegister" styleClass="primary-btn" maxWidth="Infinity"/>
            <Label fx:id="messageLabel" styleClass="error-label" alignment="CENTER"/>
            <Hyperlink fx:id="loginLink" text="Already have an account? Login" onAction="#goToLogin" styleClass="neon-link"/>
        </VBox>
    </VBox>
</StackPane>
