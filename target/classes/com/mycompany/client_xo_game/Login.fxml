<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           prefWidth="800" prefHeight="600"
           stylesheets="@/styles/login.css"
           styleClass="login-root"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.client_xo_game.LoginController">

    <VBox fx:id="contentBox"
          alignment="CENTER"
          spacing="30"
          maxWidth="600"
          fillWidth="true">

        <Label fx:id="titleLabel"
               text="LOGIN"
               styleClass="login-title"
               alignment="CENTER"
               maxWidth="Infinity"/>

        <VBox fx:id="inputContainer"
              spacing="20"
              fillWidth="true">

            <TextField fx:id="usernameField"
                       promptText="Username"
                       styleClass="neon-input"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           styleClass="neon-input"/>
        </VBox>

        <Button fx:id="loginBtn"
                text="LOGIN"
                onAction="#handleLogin"
                styleClass="primary-btn"
                maxWidth="Infinity"/>

        <Label fx:id="messageLabel"
               styleClass="error-label"
               maxWidth="Infinity"
               alignment="CENTER"/>

        <Hyperlink fx:id="registerLink"
                   text="Don't have an account? Register"
                   onAction="#goToRegister"
                   styleClass="neon-link"/>

    </VBox>

    <Button fx:id="back_id"
            text="â† BACK"
            onAction="#goBack"
            styleClass="back-btn"
            StackPane.alignment="TOP_LEFT"
            translateX="20"
            translateY="20"/>

</StackPane>