<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.*?>

<BorderPane  styleClass="winning-root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.client_xo_game.Win_LoseController">
    <top>
        <Text fx:id="stateText"  styleClass="win-text" strokeType="OUTSIDE" strokeWidth="0.0" text="You Won !!!!!" BorderPane.alignment="CENTER">
            <font>
                <Font size="48.0" />
            </font>
        </Text>
    </top>
    <bottom>
        <HBox prefHeight="67.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="closeButton"  styleClass="action-button close-button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCloseButtonPressed" text="Close ">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="30.0" />
                    </HBox.margin>
                </Button>
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="playAgainButton"  styleClass="action-button play-again-button" mnemonicParsing="false" onAction="#onPlayAgainButtonPressed" text="Play Again" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <StackPane prefHeight="250" prefWidth="500"
         styleClass="media-container">
            <MediaView fx:id="mediaView"  styleClass="media" fitHeight="250.0" fitWidth="500.0" BorderPane.alignment="CENTER" />
        </StackPane>
    </center>
    <stylesheets>
        <URL value="@/styles/win_lose.css" />
    </stylesheets>
</BorderPane>
